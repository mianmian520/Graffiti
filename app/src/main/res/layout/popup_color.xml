<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.boge.graffiti.ColorImage
        android:id="@+id/iv_black"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        app:color="@color/black"
        app:radius="15dp"/>
    <com.boge.graffiti.ColorImage
        android:id="@+id/iv_green"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        app:color="@color/green"
        app:radius="15dp"/>
    <com.boge.graffiti.ColorImage
        android:id="@+id/iv_blue"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        app:color="@color/blue"
        app:radius="15dp"/>
    <com.boge.graffiti.ColorImage
        android:id="@+id/iv_red"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        app:color="@color/red"
        app:radius="15dp"/>
    <com.boge.graffiti.ColorImage
        android:id="@+id/iv_yellow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        app:color="@color/yellow"
        app:radius="15dp"/>
</LinearLayout>